<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="账户："
        android:id="@+id/textView"
        android:layout_marginTop="151dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="68dp"
        android:textColor="#a9a9a9"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="密码："
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_marginTop="30dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:textColor="#a9a9a9"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_username_in"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:textColor="#a9a9a9"/>


    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText_password_in"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:textColor="#a9a9a9"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记住密码"
        android:id="@+id/checkBox_remeberpassword"
        android:layout_below="@+id/editText_password_in"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:textColor="#a9a9a9"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="取消"
        android:id="@+id/button_cancel"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/checkBox_remeberpassword"
        android:layout_alignLeft="@+id/checkBox_remeberpassword"
        android:layout_alignStart="@+id/checkBox_remeberpassword" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="登录"
        android:id="@+id/button_siginin_main"
        android:layout_alignTop="@+id/button_cancel"
        android:layout_alignRight="@+id/editText_password_in"
        android:layout_alignEnd="@+id/editText_password_in" />

</RelativeLayout>
